@using Articulate
@model Articulate.Models.IMasterModel


<div class="contact col-12 col-lg-8">
    <form method="get" action="@Url.ArticulateSearchUrl(Model)">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="contactform">
            <div class="row">
                <div class="col-6 col-md-4">
                    <input type="text" name="term" placeholder="Search..." style="background-color: white;">
                </div> 
                <div class="col-6 col-md-4">
                    <button type="submit" class="button">
                        <span class="button-text">Search</span>
                        <span class="button-icon fa fa-search"></span>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
